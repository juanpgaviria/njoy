<div class="container menus">
  <div class="jumbotron">
    <h1 class="display-4"><%= @menu.name.titleize %></h1>
    <p><strong>Precio: </strong><%= @menu.price %></p>
    <p><strong>Categor√≠a: </strong><%= @menu.category.name %></p>
    <%= link_to 'Ver platos', menus_path, class: 'btn btn-primary' %>
    <%= link_to 'Crear Plato', new_menu_path, class: 'btn btn-success' %>
    <%= link_to 'Editar Plato', edit_menu_path(@menu), class: 'btn btn-primary' %>
    <%= link_to 'Borrar Plato', menu_path(@menu), method: :delete, class: 'btn btn-danger',
          data: { confirm: 'Estas seguro?' } %>
  </div>
  <div class="row justify-content-center">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="text-center">Productos</h3>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Cantidad</th>
          </tr>
        </thead>
        <tbody>
          <% if @menu.products.empty? %>
            <tr><td class='text-center'>No hay productos creadas aun</td></tr>
          <% else %>
            <%= render @menu.menu_items %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
