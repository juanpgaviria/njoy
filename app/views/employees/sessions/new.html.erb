<div class="row justify-content-center">
  <div class="col-6">
    <h1>Entrar como empleado</h1>
    <%= form_tag controller: :sessions, action: :create do %>
      <div class="form-group set-pin">
        <%= label_tag(:password, "Password") %>
        <%= password_field_tag(:password, nil, class: 'form-control input-lg') %>
      </div>
      <div class="text-right"><%= submit_tag("Entrar", class: 'btn btn-primary btn-lg btn-block') %></div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  new EmployeePin();
</script>
