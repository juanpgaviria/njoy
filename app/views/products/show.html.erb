<div class="jumbotron">
  <h1 class="display-4"><%= @product.name.titleize %></h1>
  <p><strong>Descripción: </strong><%= @product.description.capitalize %></p>
  <p><strong>Cantidad: </strong><%= @product.quantity %></p>
  <p><strong>Precio: </strong><%= @product.price %></p>
  <p><strong>Marca: </strong><%= @product.brand.capitalize %></p>
  <p><strong>Categoría: </strong><%= @product.category.name %></p>
  <p><strong>Proveedor: </strong><%= @product.supplier.name %></p>
  <%= link_to 'Productos', products_path, class: 'btn btn-primary' %>
  <%= link_to 'Nuevo producto', new_product_path, class: 'btn btn-success' %>
</div>
