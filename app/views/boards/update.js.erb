<% if @board.errors.any? %>
  <% @board.errors.full_messages.each do |error| %>
    growl('danger', "<%= error %>", "#edit_board_<%= @board.id %>")
  <% end %>
<% else %>
  $("#board-<%= @board.id %>").remove()
  $('.dropzone').append('<%= j render @board %>')
  $('#new-board').remove()
  $('.modal-backdrop').remove()
<% end %>
